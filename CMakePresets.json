{
  "version": 4,
  "configurePresets": [
    {
      "name": "windows-vcpkg",
      "displayName": "Windows with vcpkg",
      "description": "Configures the project on Windows using the vcpkg toolchain. Requires the VCPKG_ROOT environment variable to be set.",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "macos-homebrew",
      "displayName": "macOS with Homebrew",
      "description": "Configures the project on macOS using Homebrew for dependencies.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux-vcpkg",
      "displayName": "Linux with vcpkg",
      "description": "Configures the project on Linux using the vcpkg toolchain. Requires the VCPKG_ROOT environment variable to be set.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-vcpkg",
      "configurePreset": "windows-vcpkg"
    },
    {
      "name": "macos-homebrew",
      "configurePreset": "macos-homebrew"
    },
    {
      "name": "linux-vcpkg",
      "configurePreset": "linux-vcpkg"
    }
  ]
}

